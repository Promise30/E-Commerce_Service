@model ECommerceService.API.Events.UserForgotPasswordTokenEvent

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Verification Code</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h2 {
            color: #333;
        }

        p {
            color: #555;
            line-height: 1.5;
        }

        .footer {
            margin-top: 20px;
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Hello, @Model.FirstName!</h2>
        <p>We received a request to reset your password. Please use the following token to reset your password:</p>
        <p>Reset Token: @Model.Token</p>
        <p>To reset your password, please follow the instructions on the password reset page and enter the token provided above.</p>
        <p>If you did not request a password reset, please contact our support team immediately to secure your account.</p>
        <br/>

        <p class="footer">Best regards,<br>The Clevont Enterprise Team</p>
    </div>
</body>
</html>
